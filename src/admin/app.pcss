.app-container {
    max-width: 1200px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
}
.notification {
    transition: transform 0.3s;
}

.notify-container {
    position: fixed;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);

    &.active {
        .notification {
            transform: translateY(-100%);
        }
    }
}
